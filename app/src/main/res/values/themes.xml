<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Tropicalias" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   Navigation and StatusBar Android color   -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/main_backgroung_gradient_color_2</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--   Default Colors   -->
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="Theme.Tropicalias" parent="Base.Theme.Tropicalias" />

    <style name="Theme.Tropicalias.Main" parent="Theme.Tropicalias">
        <item name="android:navigationBarColor">@color/ciano</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>