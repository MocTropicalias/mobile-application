<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Tropicalias" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   Navigation and StatusBar Android color   -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/main_background_gradient_color_2</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--   Default Colors   -->
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Tropicalias" parent="Base.Theme.Tropicalias" />

    <style name="Theme.Tropicalias.Main" parent="Theme.Tropicalias">
        <item name="android:navigationBarColor">@color/ciano</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.Tropicalias.Light" parent="Theme.Tropicalias">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Estilo para arredondar apenas o topo -->
    <style name="ShapeAppearanceOverlay.MaterialComponents.ShapeableImageView.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Translucent" parent="Theme.Tropicalias">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

</resources>